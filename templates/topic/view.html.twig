{% extends 'base.html.twig' %}

{% block title %}{{ Topic.name }}{% endblock %}

{% block body %}
    <h1>{{ Topic.name }}</h1>
    <div class="">{{ Topic.description }}</div>
    {% if app.user %}
        <a href="{{ path('app_post_create', {'topic': Topic.id}) }}" class="btn btn-sm btn-light">+ New Post</a>
    {% endif %}
    <table class="table">
        {% for post in postPagination %}
            <tr {% if loop.index is odd %}class="color list-unstyled"{% endif %}>
                <td>
                    <h3><a class="link-dark" href="{{ path('app_topic_view', {'id': post.id}) }}">{{ post.name }}</a></h3>
                    <span>Created: {{ post.createdAt | date('Y-m-d H:i:s') }} Updated: {{ post.updatedAt | date('Y:m:d H:i:s') }}</span>
                </td>
                {% if app.user.id is same as (post.userId) %}<td><a class="btn btn-sm btn-secondary" href="{{ path('app_post_create', {'id': post.id}) }}">Edit</a></td>{% endif %}
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(postPagination) }}
    </div>
{% endblock %}
